<h2>Crie sua conta:</h2>
<hr>
{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/usuarios/registrar" method="POST">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" id="nome" class="form-control" placeholder="Seu nome"><br>
            <label for="email">Email: </label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Seu email"><br>
            <label for="senha">Senha: </label>
                <input type="password" name="senha" id="senha" class="form-control" placeholder="Sua senha"><br>
            <label for="senha2">Comfirme sua senha: </label>
                <input type="password" name="senha2" id="senha2" class="form-control" placeholder="Repita sua senha">
            <button class="btn btn-success mt-4" type="submit">Registrar</button>
            <a class="btn btn-danger mt-4" href="/">Cancelar</a>
        </form>
    </div>
</div>