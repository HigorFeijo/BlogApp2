<h3>Nova categoria: </h3>
<hr>
{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/add" method="POST">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" class="form-control" placeholder="Nome da categoria" value="{{dados.nome}}"><br>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" class="form-control" placeholder="Slug da categoria" value="{{dados.slug}}"><br>
            <button class="btn btn-success" type="submit">Criar categoria</button>
            <a href="/admin/categorias" class="btn btn-danger">Voltar</a>
        </form>
    </div>
</div>